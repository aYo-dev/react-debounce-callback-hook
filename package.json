{
  "name": "@ayovchev/react-debounce-callback-hook",
  "version": "1.0.0",
  "description": "React debounce hook - A custom React hook that debounces a callback function.",
  "keywords": [
    "react",
    "hook",
    "debounce",
    "callback"
  ],
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "types": "build/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/esm/index.js",
      "require": "./build/cjs/index.js" 
    }
  },
  "files": [
    "build",
    "README.md"
  ],
  "author": "Asen Yovchev",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/react": "^19.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "scripts": {
    "build:cjs": "npx tsc --project tsconfig.cjs.json",
    "build:esm": "npx tsc --project tsconfig.esm.json",
    "build": "npm run build:cjs && npm run build:esm",
    "test": "npx jest --watchAll"
  }
}
