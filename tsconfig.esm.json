{
  "compilerOptions": {
    "module": "ESNext", // Generate ES module output
    "target": "ESNext", // Target modern JavaScript
    "declaration": true, // Generate TypeScript declaration files
    "declarationMap": true, // Generate declaration maps
    "outDir": "./build/esm", // Output directory for ESM build
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in imports
    "moduleResolution": "node", // Use Node.js module resolution
    "resolveJsonModule": true, // Allow importing JSON files
    "jsx": "react" // Use React JSX
  },
  "include": ["src", "index.ts"], // Include source files
  "exclude": ["node_modules", "build"] // Exclude unnecessary files
}