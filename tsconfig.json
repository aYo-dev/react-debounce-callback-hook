{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "./build",
    "types": ["node", "jest", "@testing-library/jest-dom"],
  },
  "exclude": ["node_modules", "build"],
  "plugins": [
    {
      "afterDeclarations": true
    }
  ]
}